<Window x:Class="ConstructionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Будівельні проєкти" Height="450" Width="800">

    <Grid>
        <TabControl>
            <!-- Вкладка додавання проєктів -->
            <TabItem Header="Додати проєкт">
                <StackPanel Margin="10">
                    <TextBlock Text="Тип проєкту:" FontWeight="Bold"/>
                    <ComboBox x:Name="ProjectTypeCombo" Margin="0,5">
                        <ComboBoxItem Content="Житловий будинок"/>
                        <ComboBoxItem Content="Міст"/>
                        <ComboBoxItem Content="Торговельний центр"/>
                    </ComboBox>

                    <TextBlock Text="Назва проєкту:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="NameTextBox" Margin="0,5"/>

                    <TextBlock Text="Загальна вартість:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="CostTextBox" Margin="0,5"/>

                    <TextBlock Text="Термін виконання:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <DatePicker x:Name="DeadlineDatePicker" Margin="0,5"/>

                    <TextBlock Text="Координата широти:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="LatitudeTextBox" Margin="0,5"/>

                    <TextBlock Text="Координата довготи:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="LongitudeTextBox" Margin="0,5"/>

                    <!-- Поля для будинку -->
                    <StackPanel x:Name="HouseFields" Visibility="Collapsed">
                        <TextBlock Text="Кількість квартир:" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBox x:Name="ApartmentsTextBox" Margin="0,5"/>
                        <Button Content="Розрахувати площу" Click="CalculateArea_Click" Margin="0,5"/>
                    </StackPanel>

                    <!-- Поля для мосту -->
                    <StackPanel x:Name="BridgeFields" Visibility="Collapsed">
                        <TextBlock Text="Довжина мосту (м):" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBox x:Name="LengthTextBox" Margin="0,5"/>
                        <Button Content="Розрахувати навантаження" Click="CalculateLoad_Click" Margin="0,5"/>
                    </StackPanel>

                    <!-- Поля для торговельного центру -->
                    <StackPanel x:Name="MallFields" Visibility="Collapsed">
                        <TextBlock Text="Кількість магазинів:" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBox x:Name="ShopsCountTextBox" Margin="0,5"/>

                        <TextBlock Text="Загальна площа (м²):" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBox x:Name="MallAreaTextBox" Margin="0,5"/>
                    </StackPanel>

                    <Button Content="Додати проєкт" Click="AddProject_Click" Margin="0,20" Padding="10,5"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка списку проєктів -->
            <TabItem Header="Список проєктів">
                <StackPanel Margin="10">
                    <ListView x:Name="ProjectsListView" Height="300">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding Name}" Width="150"/>
                                <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding ProjectType}" Width="120"/>
                                <GridViewColumn Header="Вартість" DisplayMemberBinding="{Binding TotalCost}" Width="100"/>
                                <GridViewColumn Header="Термін" DisplayMemberBinding="{Binding Deadline}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Button Content="Виконати етап" Click="ExecuteStage_Click" Margin="0,0,10,0"/>
                        <Button Content="Розрахувати бюджет" Click="CalculateBudget_Click" Margin="0,0,10,0"/>
                        <Button Content="Видалити" Click="DeleteProject_Click" Margin="0,0,10,0"/>
                        <Button Content="Показати історію змін" Click="ShowAuditHistory_Click" Margin="0,0,10,0"/>
                        <Button Content="Показати звіт" Click="ShowReport_Click" Margin="0,0,10,0"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Вкладка статистики -->
            <TabItem Header="Статистика">
                <StackPanel Margin="10">
                    <TextBlock x:Name="TotalProjectsText" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="TotalApartmentsText" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="TotalBudgetText" FontSize="14" Margin="0,5"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>